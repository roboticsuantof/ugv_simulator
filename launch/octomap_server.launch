<launch>
    <arg name="node_name" default="octomap_server_full"/>
    <arg name="map_file" default="mapV2"/>
    <arg name="static_map_file" default="$(find ugv_simulator)/tests/$(arg map_file).bt"/>
    <arg name="published_pc" default="/os1_cloud_node_points"/>
    <node pkg="octomap_server" type="octomap_server_node" name="$(arg node_name)_node" output="screen"> <-args="$(arg static_map_file)">
        <param name="base_frame_id" value="base_link"/>
        <param name="frame_id" value="world"/>
        <remap from="/octomap_point_cloud_centers" to="$(arg published_pc)"/>
        <remap from="/cloud_in" to="os1_cloud_node_points_octomap"/>
    </node>
</launch>
